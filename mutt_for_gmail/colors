# Colors
color attachment white	 		magenta

color	body		default			default
color 	body	 	brightgreen 	default		"[[:alnum:]][-+.#_[:alnum:]]*@[-+.[:alnum:]]*[[:alnum:]]"
color 	body	  	cyan	   		default		"(https?|ftp)://[^ ]+" 
color 	body	  	cyan	   		default		"[^ ]+@[^ ]+" # Email addresses (roughly)
color 	body	  	cyan	   		default		"(www\\.)?[^ ]+\\.(com|net|org|biz|us|de|co|info|tv)(:[^ ]+)?([^ ]+)*"
color 	body	  	cyan	   		default		"<URL:[^ ]+>"
#color	body	  	red		   		default		"\\<([[:digit:]]{1,3}\\.){3}[[:digit:]]{1,3}" # IP Addresses
color 	body	  	yellow		 	default		"\s[;:8]-?[pPD$*)/(|]\s"  # colorize smileys
#color	body		brightcyan		default		"^>.*$"  # quoted message

color quoted0	cyan			default
color quoted1	brightcyan		default
color quoted2	brightyellow	default
color quoted3	brightblue		default
color quoted4	brightred		default

