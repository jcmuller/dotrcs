color index 	brightmagenta 	default 	~T  #tagged
color index 	green 			default 	~N	#new
color index 	green 			default 	~U	#unread
#color index 	brightblack		 	default 	~v  #part of collapsed thread
color index 	brightgreen 	default 	~F  #flagged
color index 	brightgreen 	blue	 	'~N ~F' #flagged new
color index 	brightgreen 	cyan	 	'~O ~F' #flagged unread
color index 	red 			default 	~D	#deleted
color index		brightblue		default		'~h "X-Spam-Status: Yes"'
color index		brightblack		default		'~D ~h "X-Spam-Status: Yes"' # Spam deleted
color index		brightred		default		'~h "X-Spam-Status:.*score=(4\.[5-9])"'
#color index		magenta			default		'~h "X-Spam-Status:.*score=([6-9]|1[0-9])\."'

