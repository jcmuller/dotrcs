#!/bin/bash

xmodmap ~/.Xmodmap
xinput set-int-prop 'SynPS/2 Synaptics TouchPad' 'Synaptics Tap Action' 8 0 0 0 0 1 3 2
xinput set-int-prop --format=8  "SynPS/2 Synaptics TouchPad" "Synaptics Two-Finger Scrolling" -1 -1

xinput set-prop "TPPS/2 IBM TrackPoint" "libinput Natural Scrolling Enabled" 1
xinput set-prop "Logitech M570" --type=int "libinput Natural Scrolling Enabled" 1

~/bin/turn_off_caps
