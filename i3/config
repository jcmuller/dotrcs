  font pango:Ubuntu Mono for Powerline for Powerline 11

  status_command py3status -i ~/.config/i3status/lib
  tray_output off # We use trayer instead
  workspace_buttons yes

  colors {
    background #1d1f21
    statusline #c5c8c6
    separator  #666666

    #                  Border   BG      Font
    focused_workspace  #282a2e #373b41 #ffffff
    active_workspace   #333333 #5f676a #ffffff
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2f343a #cc6666 #ffffff
  }
}

