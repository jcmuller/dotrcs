bar {
  tray_output none
  status_command i3blocks -c ~/.config/i3blocks/config.short
  position bottom
  workspace_buttons yes
  binding_mode_indicator no
  output DP-0
  output eDP-1-1
  font pango:Iosevka Term 10

  colors {
    separator #969896
    background #1d1f21
    statusline #c5c8c6
    focused_workspace #81a2be #81a2be #1d1f21
    active_workspace #373b41 #373b41 #ffffff
    inactive_workspace #282a2e #282a2e #969896
    urgent_workspace #cc6666 #cc6666 #ffffff
  }
}
