general {
  output_format = "i3bar"
  colors = true
  interval = 5
  separator = true
}

order += "backlight"
order += "battery 0"
order += "battery 1"
order += "disk /"
order += "networkmanager"
order += "ethernet enp0s31f6"
order += "wireless wlp4s0"
order += "ethernet tun0"
order += "load"
order += "volume master"
order += "tztime UTC"
order += "tztime local"

battery 0 {
  format = "%status %percentage %remaining"
}

battery 1 {
  format = "%status %percentage %remaining"
}

disk "/" {
  low_threshold = 10
  threshold_type = "percentage_free"
  format = "/: {used_percent}%"
}

wireless wlp4s0 {
  #format_up = "W: (%quality at %essid, %bitrate) %ip"
  #format_up = "W: %ip (%quality)"
  format_up = "W: up"
  format_down = "W: down"
}

ethernet enp0s31f6 {
  # if you use %speed, i3status requires the cap_net_admin capability
  #format_up = "E: %ip"
  format_up = "E: up"
  format_down = "E: down"
}

ethernet tun0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  #format_up = "VPN: %ip"
  format_up = "VPN: up"
  format_down = "VPN S"
}

ethernet tun1 {
  # if you use %speed, i3status requires the cap_net_admin capability
  #format_up = "VPe: %ip"
  format_up = "VPe: up"
  format_down = "VPN Pe"
}

ethernet tun2 {
  # if you use %speed, i3status requires the cap_net_admin capability
  #format_up = "VPw: %ip"
  format_up = "VPw: up"
  format_down = "VPN Pw"
}

battery 0 {
  #format = "%status %percentage"
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

battery 1 {
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}

