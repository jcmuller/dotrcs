# vim: filetype=muttrc

set my_bgcolor = color254 # White
set my_fgcolor = color1   # Black
set my_textcolor = color234 # darkish gray

# basic colors ---------------------------------------------------------
#color normal      $my_fgcolor    $my_bgcolor
color error       $my_bgcolor    color9
color tilde       color235       $my_bgcolor
color message     color25        $my_bgcolor
color markers     color160       $my_fgcolor
color attachment  $my_fgcolor    $my_bgcolor
color search      color61        $my_bgcolor
#color status     J_black  J_status
color status      $my_fgcolor    color235
color indicator   $my_bgcolor    color34
color tree        color136       $my_bgcolor # arrow in threads

# basic monocolor screen
mono  bold          bold
mono  underline     underline
mono  indicator     reverse
mono  error         bold

# index ----------------------------------------------------------------

color index         color160        $my_bgcolor        "~A"                        # all messages
color index         color166        $my_bgcolor        "~E"                        # expired messages
color index         color33         color234        "~N"                        # new messages
color index         color33         $my_bgcolor        "~O"                        # old messages
color index         color61         $my_bgcolor        "~Q"                        # messages that have been replied to
color index         color240        $my_bgcolor        "~R"                        # read messages
color index         color33         $my_bgcolor        "~U"                        # unread messages
color index         color33         $my_bgcolor        "~U~$"                      # unread, unreferenced messages
color index         $my_fgcolor     $my_bgcolor        "~v"                        # messages part of a collapsed thread
color index         $my_fgcolor     $my_bgcolor        "~P"                        # messages from me
color index         color25         $my_bgcolor        "~p!~F"                     # messages to me
color index         color25         color234        "~N~p!~F"                   # new messages to me
color index         color25         $my_bgcolor        "~U~p!~F"                   # unread messages to me
color index         color240        $my_bgcolor        "~R~p!~F"                   # messages to me
color index         color160        $my_bgcolor        "~F"                        # flagged messages
color index         color160        $my_bgcolor        "~F~p"                      # flagged messages to me
color index         color160        color234        "~N~F"                      # new flagged messages
color index         color160        color234        "~N~F~p"                    # new flagged messages to me
color index         color160        $my_bgcolor        "~U~F~p"                    # new flagged messages to me
color index         color235        color160           "~D"                        # deleted messages
color index         $my_textcolor   $my_bgcolor        "~v~(!~N)"                  # collapsed thread with no unread
color index         color136        $my_bgcolor        "~v~(~N)"                   # collapsed thread with some unread
color index         color64         $my_bgcolor        "~N~v~(~N)"                 # collapsed thread with unread parent
# statusbg used to indicated flagged when foreground color shows other status
# for collapsed thread
color index         color160        color235        "~v~(~F)!~N"                # collapsed thread with flagged, no unread
color index         color136        color235        "~v~(~F~N)"                 # collapsed thread with some unread & flagged
color index         color64         color235        "~N~v~(~F~N)"               # collapsed thread with unread parent & flagged
color index         color64         color235        "~N~v~(~F)"                 # collapsed thread with unread parent, no unread inside, but some flagged
color index         color25         color235        "~v~(~p)"                   # collapsed thread with unread parent, no unread inside, some to me directly
color index         color136        color160        "~v~(~D)"                   # thread with deleted (doesn't differentiate between all or partial)
#color index         color136        $my_bgcolor        "~(~N)"                    # messages in threads with some unread
#color index         color64         $my_bgcolor        "~S"                       # superseded messages
#color index         color160        $my_bgcolor        "~T"                       # tagged messages
#color index         color166        color160        "~="                       # duplicated messages

# message headers ------------------------------------------------------

#color header        color240        $my_bgcolor        "^"
color hdrdefault    color240        $my_bgcolor
color header        $my_fgcolor        $my_bgcolor        "^(From)"
color header        color33         $my_bgcolor        "^(Subject)"

# body -----------------------------------------------------------------

color quoted        color33         $my_bgcolor
color quoted1       color25         $my_bgcolor
color quoted2       color136        $my_bgcolor
color quoted3       color160        $my_bgcolor
color quoted4       color166        $my_bgcolor

color signature     color240        $my_bgcolor
color bold          color235        $my_bgcolor
color underline     color235        $my_bgcolor
color normal        $my_textcolor        $my_bgcolor

color body          $my_textcolor        $my_bgcolor        "[;:][-o][)/(|]"    # emoticons
color body          $my_textcolor        $my_bgcolor        "[;:][)(|]"         # emoticons
color body          $my_textcolor        $my_bgcolor        "[*]?((N)?ACK|CU|LOL|SCNR|BRB|BTW|CWYL|\
                                                     |FWIW|vbg|GD&R|HTH|HTHBE|IMHO|IMNSHO|\
                                                     |IRL|RTFM|ROTFL|ROFL|YMMV)[*]?"
color body          $my_textcolor        $my_bgcolor        "[ ][*][^*]*[*][ ]?" # more emoticon?
color body          $my_textcolor        $my_bgcolor        "[ ]?[*][^*]*[*][ ]" # more emoticon?

## pgp

color body          color160      $my_bgcolor        "(BAD signature)"
color body          color25       $my_bgcolor        "(Good signature)"
color body          $my_bgcolor   $my_bgcolor        "^gpg: Good signature .*"
color body          $my_fgcolor   $my_bgcolor        "^gpg: "
color body          $my_fgcolor   color160        "^gpg: BAD signature from.*"
mono  body          bold                          "^gpg: Good signature"
mono  body          bold                          "^gpg: BAD signature from.*"

# yes, an insance URL regex
color body          color160        $my_bgcolor        "([a-z][a-z0-9+-]*://(((([a-z0-9_.!~*'();:&=+$,-]|%[0-9a-f][0-9a-f])*@)?((([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?|[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+)(:[0-9]+)?)|([a-z0-9_.!~*'()$,;:@&=+-]|%[0-9a-f][0-9a-f])+)(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*(/([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*(;([a-z0-9_.!~*'():@&=+$,-]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?(#([a-z0-9_.!~*'();/?:@&=+$,-]|%[0-9a-f][0-9a-f])*)?|(www|ftp)\\.(([a-z0-9]([a-z0-9-]*[a-z0-9])?)\\.)*([a-z]([a-z0-9-]*[a-z0-9])?)\\.?(:[0-9]+)?(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*(/([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*(;([-a-z0-9_.!~*'():@&=+$,]|%[0-9a-f][0-9a-f])*)*)*)?(\\?([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?(#([-a-z0-9_.!~*'();/?:@&=+$,]|%[0-9a-f][0-9a-f])*)?)[^].,:;!)? \t\r\n<>\"]"
# and a heavy handed email regex
#color body          J_magent        $my_bgcolor        "((@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\]),)*@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\.[0-9]?[0-9]?[0-9]\\]):)?[0-9a-z_.+%$-]+@(([0-9a-z-]+\\.)*[0-9a-z-]+\\.?|#[0-9]+|\\[[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\.[0-2]?[0-9]?[0-9]\\])"

# Various smilies and the like
color body color230  $my_bgcolor  "<[Gg]>"                            # <g>
color body color230  $my_bgcolor  "<[Bb][Gg]>"                        # <bg>
color body color136  $my_bgcolor  " [;:]-*[})>{(<|]"                  # :-) etc...
# *bold*
color body color33   $my_bgcolor  "(^|[[:space:][:punct:]])\\*[^*]+\\*([[:space:][:punct:]]|$)"
mono  body bold              "(^|[[:space:][:punct:]])\\*[^*]+\\*([[:space:][:punct:]]|$)"
# _underline_
color body color33   $my_bgcolor  "(^|[[:space:][:punct:]])_[^_]+_([[:space:][:punct:]]|$)"
mono  body underline "(^|[[:space:][:punct:]])_[^_]+_([[:space:][:punct:]]|$)"
# /italic/  (Sometimes gets directory names)
color body color33   $my_bgcolor  "(^|[[:space:][:punct:]])/[^/]+/([[:space:][:punct:]]|$)"
mono body  underline         "(^|[[:space:][:punct:]])/[^/]+/([[:space:][:punct:]]|$)"

# Border lines.
#color body          color33         $my_bgcolor        "( *[-+=#*~_]){6,}"

#folder-hook .                  "color status        J_black         J_status        "
#folder-hook gmail/inbox        "color status        J_black         color136        "
#folder-hook gmail/important    "color status        J_black         color136        "

# highlight my name and other personally relevant strings
color body          yellow          $my_bgcolor         "(juan|jcmuller|muller|juancmuller|juan c. müller|juan c. muller|juan camilo|müller)"
# messages which mention my name in the body
color index         yellow          $my_bgcolor         "~b \"juan|jcmuller|muller|juancmuller|camilo|müller\" !~N !~T !~F !~p !~P"
# messages which are in reference to my mails
color index         brightmagenta   $my_bgcolor         "~x \"(juan|jcmuller|muller|juancmuller).gmail\\.com\" !~N !~T !~F !~p !~P"

color sidebar_new color4 $my_bgcolor
