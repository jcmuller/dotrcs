#!/bin/bash

NAMESERVER=${icon:-$(xrescat i3xrocks.egress.name-server 8.8.8.8)}
LABEL_ICON=${icon:-$(xrescat i3xrocks.label.egress üåê)}
LABEL_COLOR=${label_color:-$(xrescat i3xrocks.label.color "#7B8394")}
VALUE_COLOR=${color:-$(xrescat i3xrocks.value.color "#D8DEE9")}
VALUE_FONT=${font:-$(xrescat i3xrocks.value.font "Source Code Pro Medium 13")}

EGRESS=$(dig myip.opendns.com @$NAMESERVER)

echo "<span color=\"${LABEL_COLOR}\">$LABEL_ICON</span><span font_desc=\"${VALUE_FONT}\" color=\"${VALUE_COLOR}\">$EGRESS</span>"
