tztime new_york {
  format = "%time|"
  format_time = "%a %m/%d %I:%M:%S %p"
  on_click 1 = "exec xclock -fg black -bg white -hd red -update 1 -geometry 300x300"
  on_click 2 = "exec xclock -padding 15 -digital -face "Terminus-11" -strftime "%a %m/%d %H:%M:%S%P" -update 1"
}
