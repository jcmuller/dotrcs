dpms {
  icon_off = "DPMS OFF"
  icon_on = "DPMS ON"
}

do_not_disturb {
  state_on = "DND"
  state_off = "DND OFF"
}

egress {
  format = "Eg: {egress}"
  color = "ffff00"
}

diskdata "/" {
  disk = "/dev/mapper/xubuntu--vg-root"
  low_threshold = 10
  threshold_type = "percentage_free"
  format = "/: {used_percent}%"
  on_click 1 = "exec thunar /"
}

