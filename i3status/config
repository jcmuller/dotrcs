general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "my_weather_yahoo nyc"
order += "simple_button lock"
order += "simple_button sleep"
order += "simple_button modmap"
order += "dpms"
order += "disk /"
order += "disk /home"
order += "disk /var/lib/data"
order += "egress"
order += "ethernet enp0s25"
order += "wireless _first_"
order += "ethernet tun0"
order += "ethernet tun1"
order += "battery 0"
order += "battery 1"
#order += "battery_level"
order += "load"
order += "my_sysdata"
order += "volume master"
#order += "file /var/log/Xorg.0.log"
order += "tztime new_york"

egress {
  format = "Eg: {egress}"
  color = "ffff00"
}

disk "/" {
  low_threshold = 10
  threshold_type: "percentage_free"
  format = "%percentage_used /"
  on_click 1 = "exec thunar /"
}

disk "/home" {
  low_threshold = 10
  threshold_type: "percentage_free"
  format = "%percentage_used home"
  on_click 1 = "exec thunar /home/jcmuller"
}

disk "/var/lib/data" {
  low_threshold = 10
  threshold_type: "percentage_free"
  format = "%percentage_used docker"
  on_click 1 = "exec thunar /var/lib/data"
}

simple_button lock {
  text = "LOCK"
  on_click 1 = "exec --no-startup-id ~/bin/lock.sh"
}

simple_button sleep {
  text = "SLEEP"
  on_click 1 = "exec --no-startup-id ~/bin/sleep.sh"
}

simple_button modmap {
  text = "FIX INPUTS"
  color = "00DD11"
  on_click 1 = "exec --no-startup-id ~/bin/fix_inputs"
}

my_weather_yahoo nyc {
  cache_timeout = 1800
  city_code = "10002"
  forecast_days = 2
}

battery_level {
  format = "Battery: {}"
  mode = "bar"
  on_click 1 = "exec gnome-power-statistics"
}

wireless _first_ {
  #format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_up = "W: %ip (%quality)"
  format_down = "W: down"
}

ethernet enp0s25 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip"
  format_down = "E: down"
}

ethernet tun0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "VS: %ip"
  format_down = "VPN S"
  on_click 1 = "exec --no-startup-id start_vpn"
}

ethernet tun1 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "VP: %ip"
  format_down = "VPN P"
  on_click 1 = "exec --no-startup-id start_vpn"
}

battery 0 {
  #format = "%status %percentage"
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

battery 1 {
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

