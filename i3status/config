general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

#order += "window_title"
#order += "weather_yahoo nyc"
order += "dpms"
order += "disk /"
#order += "run_watch DHCP"
#order += "run_watch OVPN"
#order += "path_exists VPN"
order += "ethernet tun0"
#order += "wireless wlan0"
#order += "ethernet eth0"
order += "battery 0"
order += "battery 1"
order += "battery_level"
order += "cpu_temperature 0"
order += "load"
order += "sysdata"
order += "volume master"

weather_yahoo nyc {
  cache_timeout = 1800
  request_timeout = 10
  city_code = "USNY3792"
  forecast_days = 2
}

battery_level {
  format = "Battery: {}"
  mode = "ascii_bar"
  on_click 1 = "exec gnome-power-statistics"
}

wireless wlan0 {
  format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_down = "W: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

ethernet tun0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "VPN"
  format_down = "VPN"
  on_click 1 = "exec --no-startup-id start_vpn"
}

battery 0 {
  format = "%status %percentage %remaining (%emptytime %consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

battery 1 {
  format = "%status %percentage %remaining (%emptytime %consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

