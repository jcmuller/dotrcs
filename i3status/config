general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "my_weather_yahoo nyc"
order += "simple_button lock"
order += "simple_button sleep"
order += "simple_button modmap"
order += "dpms"
order += "disk /"
order += "egress"
order += "ethernet tun0"
order += "wireless wlan0"
#order += "ethernet eth0"
order += "battery 0"
order += "battery 1"
#order += "battery_level"
order += "load"
order += "my_sysdata"
order += "volume master"
#order += "time"

egress {
  format = "E: {egress}"
  color = "ffff00"
}

disk "/" {
  format = "/ %free"
  on_click 1 = "exec thunar /"
}

simple_button lock {
  text = "LOCK"
  on_click 1 = "exec --no-startup-id ~/bin/lock.sh"
}

simple_button sleep {
  text = "SLEEP"
  on_click 1 = "exec --no-startup-id ~/bin/sleep.sh"
}

simple_button modmap {
  text = "FIX INPUTS"
  color = "00DD11"
  on_click 1 = "exec --no-startup-id ~/bin/fix_inputs"
}

my_weather_yahoo nyc {
  cache_timeout = 1800
  city_code = "10002"
  forecast_days = 2
}

battery_level {
  format = "Battery: {}"
  mode = "bar"
  on_click 1 = "exec gnome-power-statistics"
}

wireless wlan0 {
  #format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_up = "W: %ip (%quality)"
  format_down = "W: down"
}

ethernet eth0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

ethernet tun0 {
  # if you use %speed, i3status requires the cap_net_admin capability
  format_up = "VPN"
  format_down = "VPN"
  on_click 1 = "exec --no-startup-id start_vpn"
}

battery 0 {
  #format = "%status %percentage"
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

battery 1 {
  format = "%status %percentage %remaining (%consumption)"
  format_down = "No battery"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
  on_click 1 = "exec gnome-power-statistics"
}

